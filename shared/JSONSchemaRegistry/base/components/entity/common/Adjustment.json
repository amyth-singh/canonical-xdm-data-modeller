{
  "AdjustmentObject": {
    "type": "object",
    "additionalProperties": {
      "$ref": "#/AdjustmentProperties"
    }
  },
  "AdjustmentProperties": {
    "type": "object",
    "unevaluatedProperties": false,
    "properties": {
      "AdjustmentId": {
        "type": "string",
        "description": "The canonical (synthetic) Xfuze Adjustment ID, if identifiable, format Adjustment_[SourceSystem]_[Number] e.g Adjustment_D365_AD123456"
      },
      "AdjustmentKey": {
        "type": "string",
        "description": "The natural adjustment number / key, if identifiable e.g AD123456"
      },
      "AdjustmentCode": {
        "type": "string",
        "description": "The unique code of the Adjustment e.g AD020"
      },
      "AdjustmentType": {
        "type": "string",
        "description": "The type of the Adjustment"
      },
      "AdjustmentPurpose": {
        "type": "string",
        "description": "The purpose of the Adjustment e.g Correction, Goodwill",
        "enum": [
          "Correction",
          "Goodwill",
          "Credit",
          "Error",
          "Other"
        ]
      },
      "AdjustmentName": {
        "type": "string",
        "description": "The name of the Adjustment"
      },
      "AdjustmentDesc": {
        "type": "string",
        "description": "The description of the Adjustment instance"
      },
      "Status": {
        "type": "object",
        "description": "The collection of Status for this adjustment",
        "unevaluatedProperties": false,
        "properties": {
          "ProcessingStatus": {
            "description": "",
            "$ref": "../../common/Status.json#/StatusProperties"
          }
        }
      },
      "Times": {
        "type": "object",
        "description": "The collection of key Time points for this adjustment",
        "oneOf": [
          {
            "required": [
              "AppliedOn"
            ]
          },
          {
            "required": [
              "CreatedOn"
            ]
          }
        ],
        "unevaluatedProperties": false,
        "properties": {
          "AppliedOn": {
            "description": "",
            "$ref": "../../common/Time.json#/TimeProperties"
          },
          "CancelledOn": {
            "description": "",
            "$ref": "../../common/Time.json#/TimeProperties"
          },
          "VoidedOn": {
            "description": "",
            "$ref": "../../common/Time.json#/TimeProperties"
          },
          "CreatedOn": {
            "description": "",
            "$ref": "../../common/Time.json#/TimeProperties"
          },
          "LastUpdatedOn": {
            "description": "",
            "$ref": "../../common/Time.json#/TimeProperties"
          },
          "LastStatusUpdatedOn": {
            "description": "",
            "$ref": "../../common/Time.json#/TimeProperties"
          }
        }
      },
      "Totals": {
        "type": "object",
        "description": "The collection of possible totals, related to the adjustment.  Actual usage and ability to populate depends on the richness of the sources..",
        "unevaluatedProperties": false,
        "properties": {
          "AppliedTotal": {
            "description": "",
            "$ref": "../../common/Price.json#/PriceProperties"
          }
        },
        "required": [
          "AppliedTotal"
        ]
      },
      "GLCode": {
        "type": "string",
        "description": "A GL code associated with this adjustment"
      },
      "ReasonCode": {
        "type": "string",
        "description": "The reason code for this Adjustment"
      },
      "ReasonDesc": {
        "type": "string",
        "description": "The reason desc for this Adjustment"
      },
      "EventId": {
        "type": "string",
        "description": "The Xfuze EventId that was the source of this data"
      },
      "AsOf": {
        "type": "string",
        "format": "date-time",
        "description": "The timestamp at which the Adjustment instance usage was valid 'as of', if known and applicable"
      }
    }
  }
}
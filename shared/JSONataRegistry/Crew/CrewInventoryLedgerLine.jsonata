                                                        {"Id":$formatValue(`sku`,"STRING",""),"SystemCode":"Archean","Code":"SKU"},
                                                        {"Id":$formatValue(`site`,"STRING",""),"SystemCode":"Archean","Code":"Site"}],"ARRAY","")]);

$TriggerEntity := $objectsToDocument(
    [$buildCustomAttribute("StockLocation.StockLocationKey",site,"STRING",""),
     $buildCustomAttribute("Product.ProductIds.ProductVariantId",$stringJoin(["ProductVariant",$formatValue(sku,"STRING")],"_"),"STRING",""),
